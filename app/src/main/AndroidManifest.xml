<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ezstudies.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EzStudies" >
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".activities.Welcome"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Overview"
            android:label="@string/overview" >
        </activity>
        <activity android:name=".activities.Agenda"
            android:label="@string/agenda"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".activities.Homeworks"
            android:label="@string/homeworks" >
        </activity>
        <activity android:name=".activities.Settings"
            android:label="@string/settings" >
        </activity>
        <activity android:name=".activities.myMapView"
            android:label="@string/map" >
        </activity>

        <service android:name=".services.GpsService" />
        <service android:name=".services.Login" />
        <service android:name=".services.RouteCalculator" />
        <service android:name=".services.AlarmSetter" />

        <receiver
            android:name=".activities.Agenda$NotificationReceiver"
            android:enabled="true" />
        <receiver
            android:name=".activities.Homeworks$NotificationReceiver"
            android:enabled="true" />
        <receiver android:name=".AlarmRestorer"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>